<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aknot.simpletimetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/main_label"
            android:name="com.aknot.simpletimetracker.activity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TimerActivity" />
        <activity android:name=".activity.SummaryActivity" />
        <activity android:name=".activity.ReportActivity" />
        <activity android:name=".activity.TimerEditActivity" />
        <activity android:name=".activity.CategoryActivity" />
    </application>

</manifest>